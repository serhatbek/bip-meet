{% block content %}
  <section class="section section-banner">
    <div class="container">
      <div class="swiper swiper-banner">
        <div class="swiper-wrapper">
          {% for item in bannerItems %}
            {% call BannerCard.item(title = item.heading, desc = item.desc, img = item.img, class='swiper-slide') %}
            {{Button.item(
              text=item.btnTextOne,
              class='button--sm',
              href='/'
            )}}

            {% if item.btnTextTwo %}
              {{Button.item(
              text=item.btnTextTwo,
              class='button--sm button--slider',
              href='/'
            )}}
            {% endif %}
            {% endcall %}
          {% endfor %}
        </div>
      </div>
      <div class="swiper-pagination"></div>
    </div>
  </section>

  <section class="section section-offer">
    <div class="container">
      <h2 class='section__title'>BİP Meet’in Değer Teklifleri</h2>
      <div class="box">
        {% for item in offerCardItems %}
          {{OfferCard.item(
                title=item.title,
                desc=item.desc,
                img=item.img
              )}}
        {% endfor %}
      </div>
    </div>
  </section>

  <section class="section section-features"></section>
{% endblock %}
{% import "includes/components/Button/button.njk" as Button %}

{% set navItems = [
  {
    text:'Platform',
    icon:'../assets/images/icons-arrow.png',
    children: ['Online Konferans', 'Toplantı Kaydetme', 'Anlık Mesajlaşma', 'Anket', 'Moderasyon & Co-Host yetkileri', 'Ara Oda Oluşturma', 'Beyaz Tahta']
  },
  {
    text:'Kurumsal Çözümler',
    icon:'../assets/images/icons-arrow.png',
    children: ['İşte Suit', 'API VE SDK', 'Sektörler & Marka İşbirlikleri & Testimonials (Referanslar)', 'Toptan (Wholesale)']
  },
  {
    text:'Fiyatlandırma'
  },
  {
    text:'Kaynaklar',
    icon:'../assets/images/icons-arrow.png',
    children: ['Blog', 'Yardım', 'How 2 Videos']
  }
] %}

<div class="container">
  <a class='header__logo' href="/">
    <figure>
      <img src="../assets/images/header-elements-logo.png" alt="Bipmeet Logo">
    </figure>
  </a>

  <nav>
    <ul class="menu">
      {% for item in navItems %}
        <li>
          <a href="/">{{ item.text }}</a>
          {% if item.icon %}
            <figure><img src="{{ item.icon }}"></figure>
          {% endif %}

          {% if item.children %}
            <ul class="submenu">
              {% for item in item.children %}
                <li>
                  <a href="/">{{ item }}</a>
                </li>
              {% endfor %}
            </ul>
          {% endif %}
        </li>
      {% endfor %}
    </ul>
  </nav>

  <div>
    {{Button.item(
        class='download',
        text='İNDİR'
      )}}

    {{Button.item(
        class='small join',
        text='Toplantıya Katıl',
        href='/',
        buttonV2=true
      )}}

    {{Button.item(
        class='small',
        text='Giriş Yap',
        href='/'
      )}}
  </div>
</div>
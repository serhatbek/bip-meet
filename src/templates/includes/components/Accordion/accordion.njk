{% macro item(title, icon, desc) %}
  <div class="accordion">
    <div class="accordion__item">
      <div class="accordion__item-header">
        <span>{{ title }}</span>
        <figure>
          <img src="{{ icon }}">
        </figure>
      </div>
      <p class="accordion__item-body">
        {{ desc }}
      </p>
    </div>
  </div>
{% endmacro %}
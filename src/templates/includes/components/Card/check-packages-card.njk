{% import "includes/components/Button/button.njk" as Button %}

{% macro item(packData) %}
  <div class="check-packages-card">
    <h3>{{ packData.title }}</h3>
    <p>{{ packData.desc }}</p>
    <div class="check-packages-card__action">
      {% for item in packData.btns %}
        {{Button.item(
          text= item.text,
          href= item.link,
          class=item.class
        )}}
      {% endfor %}
    </div>
  </div>
{% endmacro %}
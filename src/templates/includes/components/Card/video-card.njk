{% macro item(href, img, icon, class) %}
  <div class="slider-video-card{%- if class %} {{ class }}{%- endif %}">
    <a href="{{ href }}">
      <figure class="slider-video-card__img">
        <img src="{{ img }}">
      </figure>
      <figure class="slider-video-card__icon">
        <img src="{{ icon }}">
      </figure>
    </a>
  </div>
{% endmacro %}
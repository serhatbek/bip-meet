{% macro item(title, desc, img) %}
  <div class="banner-card">
    <div class="banner-card__content">
      <h1>{{ title }}</h1>
      <p>{{ desc }}</p>
      <div>
        {{ caller() }}
      </div>
    </div>
    <figure class="banner-card__img">
      <img src="{{ img }}" alt="{{ title }}">
    </figure>
  </div>
{% endmacro %}
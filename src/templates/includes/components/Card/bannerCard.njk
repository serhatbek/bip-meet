{% macro item(title, desc, img, class) %}
  <div class="banner-card {%- if class %} {{ class }}{% endif -%}">
    <div class="banner-card__content">
      <h1 data-swiper-parallax="-500">{{ title }}</h1>
      <p data-swiper-parallax="-300">{{ desc }}</p>
      <div data-swiper-parallax="-100">
        {{ caller() }}
      </div>
    </div>
    <figure class="banner-card__img">
      <img src="{{ img }}" alt="{{ title }}">
    </figure>
  </div>
{% endmacro %}
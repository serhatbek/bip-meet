{% import "includes/components/Card/features-info-card.njk" as FeturesInfoCard %}

{% macro item(tabTitle, tabImage, tabClass, cardText, cardDesc, cardBtnText, cardBtnUrl) %}
  <div class="accordiontab">
    <div class="accordiontab__item">
      <button class='accordiontab__item__btn  {% if tabClass -%}{{ tabClass }}{%- endif %}'>{{ tabTitle }}</button>
      <div class="accordiontab__item__content {% if tabClass -%}{{ tabClass }}{%- endif %}">
        <figure>
          <img src="{{ tabImage }}">
        </figure>
        {{FeturesInfoCard.item(
            title=cardText,
            desc=cardDesc,
            btnText=cardBtnText,
            btnUrl=cardBtnUrl,
            class='absolute'
          )}}
      </div>
    </div>
  </div>
{% endmacro %}
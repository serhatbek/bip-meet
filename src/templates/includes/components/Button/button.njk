{% macro item(text, class, href, attr, buttonV2) %}
  {% if href %}
    <a href="{{ href }}" class="button button--link
      {%- if class %} {{ class }}{% endif -%}
      {%- if buttonV2 %} button--v2{% endif -%}" {{ attr }}>{{ text }}</a>

  {% else %}
    <button class="button
      {%- if class %} {{ class }}{% endif -%}
      {%- if buttonV2 %} button--v2{% endif -%}" {{ attr }}>
      {{ text }}
    </button>
  {% endif %}
{% endmacro %}
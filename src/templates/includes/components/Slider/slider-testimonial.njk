{% import "includes/components/Card/testimonial-card.njk" as TestimonialCard %}

{% macro item(testimonialData) %}
  <div class="swiper testimonialSwiper">
    <div class="swiper-wrapper">
      {% for item in testimonialData %}
        {{TestimonialCard.item(
          title=item.heading,
          img=item.img,
          desc=item.desc,
          iconTop= item.topicon,
          iconBottom= item.bottomicon,
          addClass= 'swiper-slide'
        )}}
      {% endfor %}
    </div>
    <div class="swiper-pagination"></div>
  </div>
{% endmacro %}